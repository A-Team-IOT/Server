include mixins
// examples
-
  var data = [
    { id: '1', name: 'Test Device 1', status: 'Active'},
    { id: '2', name: 'Test Device 2', status: 'Active'},
    { id: '3', name: 'Test Device 3', status: 'Inactive'},
    { id: '4', name: 'Test Device 4', status: 'Inactive'},
    { id: '5', name: 'Test Device 5', status: 'Inactive'}
  ];

+grid({
  dataSource: data,
  columns: [
    {
      key: 'id',
      title: 'Device Id'
    },
    {
      key: 'name',
      title: 'Device Name',    
      cellTemplate: (props) => {
        return `
          <a href="ControlPortal">${props.name}</a>
        `;
      }
    },
    {
      key: 'status',
      title: 'Device Status',
      headCellClass: ['u-align-right'],
      cellClass: ['u-align-right'],
      cellTemplate: (props) => {
        return `
          <code style="color: #6d7e8c">${props.status}</code>
        `;
      }
    },
  ]
})

